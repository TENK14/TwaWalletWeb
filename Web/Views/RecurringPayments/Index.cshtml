@*@model IEnumerable<TwaWallet.Model.RecurringPayment>*@
@model IEnumerable<TwaWallet.Web.Models.RecurringPaymentViewModels.RecurringPaymentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/recurring-payments-index.css" asp-append-version="true" />
}

<h2>Recurring payments</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="GenerateAllActiveRecurringPayments">Generate all active recurring payments</a>
</p>

<div>
    <label>Počet aktivních položek: </label>
    <span>@Model.Where(m => m.IsActive).Count()</span>
    <label>Celková cena: </label>
    <span>@string.Format("{0:C}", Model.Where(m => m.IsActive).Sum(m => m.Cost))</span>
</div>

<div class="table-responsive">
<table class="table recurring-payments-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Earnings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Warranty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Category)*@
                    @Html.Display("Category")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Interval)*@
                    @Html.Display("Interval")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.PaymentType)*@
                    @Html.Display("PaymentType")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.Earnings ? "earnings-true" : "earnings-false")">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Earnings)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Warranty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntervalDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentTypeDescription)
                    </td>
                    <td>
                        <p>
                            <a asp-action="GeneratePayment" asp-route-id="@item.Id">Generate payment</a>
                        </p>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
